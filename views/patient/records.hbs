<section class="container mt-4">
  <h1 class="mb-4">Your Medical Records</h1>

  {{#if patient.medicalRecords.length}}
    <ul class="list-group">
      {{#each patient.medicalRecords}}
        <li class="list-group-item">
          <p><strong>Date:</strong> {{this.date}}</p>
          <p><strong>Doctor:</strong> {{this.doctor.name}}</p>
          <p><strong>Diagnosis:</strong> {{this.diagnosis}}</p>
          <p><strong>Prescription:</strong> {{this.prescription}}</p>
        </li>
      {{/each}}
    </ul>
  {{else}}
    <p class="text-muted">No medical records found.</p>
  {{/if}}

  <a href="/patient/dashboard" class="btn btn-secondary mt-3">Back to Dashboard</a>
</section>