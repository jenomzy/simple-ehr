<div class="container mt-5">
  <!-- Doctor Profile -->
  <div class="row mb-4">
    <div class="col">
      <div class="card">
        <div class="card-header bg-primary text-white">
          <h5>Profile</h5>
        </div>
        <div class="card-body">
          <p><strong>Name:</strong> {{doctor.doctor.name}}</p>
          <p><strong>ID:</strong> {{doctor.doctor.email}}</p>
          <p><strong>Designation:</strong> {{doctor.doctor.designation}}</p>
        </div>
      </div><hr>
      <div class="card"></div>
        <div class="card-header bg-primary text-white">
          <h5>Features of {{doctor.doctor.designation}} doctor</h5>
        </div>
        <div class="card-body">
          <p><strong>Dashboard Access</strong></p>
          <p><strong>Patient List Access</strong></p>
          <p><strong>Individual Patient Details Access</strong></p>
          {{#if (eq doctor.doctor.designation "lab")}}
          <p><strong>Add Lab Info to Patient Details</strong></p>
          {{/if}}
          {{#if (eq doctor.doctor.designation "radiologist")}}
          <p><strong>Add Radio Scan Info to Patient Details</strong></p>
          {{/if}}
          {{#if (eq doctor.doctor.designation "pharmacist")}}
          <p><strong>Mark Prescription as Dispensed to Patient Details</strong></p>
          {{/if}}
          {{#if (eq doctor.doctor.designation "consultant")}}
          <p><strong>Register a new Doctor</strong></p>
          <p><strong>View Appointments</strong></p>
          {{/if}}
        </div>
      </div>
    </div>

    <!-- Appointments Summary -->
    {{#if (eq doctor.doctor.designation "consultant")}}
      <div class="col">
        <div class="card">
          <div class="card-header bg-success text-white">
            <h5>Appointments Summary</h5>
          </div>
          <div class="card-body">
            <p><strong>Approved Appointments:</strong>
              {{doctor.approvedAppointments}}</p>
            <p><strong>Pending Appointments:</strong>
              {{doctor.pendingAppointments}}</p>
            <a href="/doctor/appointments" class="btn btn-primary">View
              Appointments</a>
          </div>
        </div>
      </div>

       <!-- Recent Patients Section -->
  <div class="row">
    <div class="col">
      <div class="card">
        <div class="card-header bg-info text-white">
          <h5>Recent Patients</h5>
        </div>
        <div class="card-body">
          {{#if doctor.patients.length}}
            <ul class="list-group">
              {{#each doctor.patients}}
                <li class="list-group-item">
                  <p><strong>Patient Name:</strong> {{this.name}}</p>
                  <p><strong>Email:</strong> {{this.email}}</p>

                  {{#if this.medicalRecords.length}}
                    <p><strong>Last Diagnosis:</strong>
                      {{this.medicalRecords.0.diagnosis}}</p>
                    <p><strong>Last Prescription:</strong>
                      {{this.medicalRecords.0.prescription}}</p>
                    <p><strong>Last Visit:</strong>
                      {{this.medicalRecords.0.date}}</p>
                  {{else}}
                    <p>No recent medical records found.</p>
                  {{/if}}

                  <a
                    href="/doctor/patient/{{this._id}}"
                    class="btn btn-secondary"
                  >View Full Record</a>
                </li>
              {{/each}}
            </ul>
          {{else}}
            <p>No recent patients found.</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
    {{/if}}
  </div>

 